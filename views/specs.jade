html
  head
    script(type='text/javascript', src='/vendor/shims.js')
    script(type='text/javascript', src='/vendor/style-html.js')
    link(rel='stylesheet', type='text/css', href='/vendor/redacted/stylesheet.css')
    link(rel='stylesheet', type='text/css', href='/theme.css')
    script(type='text/javascript', src='/mui.js')
    script(type='text/javascript', src='/specs.js')
    link(rel='stylesheet', type='text/css', href='specs.scss')
  body
    .container
      h1 MUI - Kitchen Sink / Specs
      hr
      .component
        ui-label Button
        ui-button Default button
        ui-button(type='info') Info button
        ui-button(type='success') Success button
        ui-button(type='warning') Warning button
        ui-button(type='danger') Danger button
        ui-button(type='inverse') Inverse button
        ui-button(disabled) Default button
      .component
        ui-label Modal
        ui-button Open Modal
          ui-modal
            div
              h1 Content
              ui-button Close
      .component
        ui-label Checkbox
        ui-checkbox
        ui-checkbox(disabled)
      .component
        ui-label Dropdown
        span
          | Click me!
          ui-dropdown
            ui-option Option 1
      .component
        ui-label Tooltip
        span
          | Hover me!
          ui-tooltip(direction="top")
            div Tooltip
      .component
        ui-label Select
        ui-select
          ui-label
          ui-dropdown
            ui-option(value="option1") Option 1
            ui-option(value="option2", selected="true") Option 2
            ui-option(value="option3") Option 3
        ui-select(disabled)
          ui-label
          ui-dropdown
            ui-option(value="option1") Option 1
      .component
        ui-label Text
        ui-text(placeholder="Text")
      .component
        ui-label Password
        ui-password(placeholder="Password")
      .component
        ui-label Textarea
        ui-textarea