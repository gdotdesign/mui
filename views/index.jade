!!! 5
html
  head
    script(type='text/javascript', src='/vendor/shims.js')
    script(type='text/javascript', src='/vendor/style-html.js')
    link(rel='stylesheet', type='text/css', href='/flat-ui/theme.css')
    link(rel='stylesheet', type='text/css', href='/index.css')

    script(type='text/javascript', src='/mui.js')
    script(type='text/javascript', src='/index.js')

body
  ui-pager(name="main")
    ui-page(name="index")
      .intro
        h1 mui
        h2 Modern Interfaces for the Modern Web
        a(target='components')
          span
            i.icon-th
            | Components
        a(target='extending')
          span
            i.icon-code-fork
            | Extending
        .container
          span(name='button')
            ui-button Button
          span(name='tooltip')
            ui-tooltip(open='true', direction='top')
              div Tooltip
          span(name='checkbox')
            ui-checkbox(checked='true')
          span(name='select')
            ui-select
              ui-label
              ui-dropdown
                ui-option Select
                ui-option(value='option1') Option 1
    ui-page(name="components")
      ui-pager
        ui-page(name="index")
          .container
            h1 Components
            a(target="components/button")
              | Button
            a(target="components/checkbox")
              | checkbox
            a(target="components/modal")
              | Modal
            a(target="components/dropdown")
              | Dropdown
            a(target="components/select")
              | Select
            a(target="components/tooltip")
              | Tooltip
        ui-page(name="button")
          include components/ui-button
        ui-page(name="modal")
          include components/ui-modal
        ui-page(name="dropdown")
          include components/ui-dropdown
        ui-page(name="select")
          include components/ui-select
        ui-page(name="tooltip")
          include components/ui-tooltip
        ui-page(name="checkbox")
          include components/ui-checkbox
      - title = 'Components'
      header
        h1 mui
        ui-button.icon(target="index")
          i.icon-home
        ui-button.icon
          i.icon-twitter
          ui-tooltip(direction="bottom")
            span Tweet
        ui-button.icon
          i.icon-code-fork
          ui-tooltip(direction="bottom")
            span Fork at Github
        ui-button.components
          | Components
          i.icon-chevron-down
          ui-dropdown
            ui-option
              a(target="components/button")
                | Button
            ui-option
              a(target="components/dropdown")
                | Dropdown
            ui-option
              a(target="components/modal")
                | Modal
            ui-option
              a(target="components/select")
                | Select
            ui-option
              a(target="components/tooltip")
                | Tooltip
            ui-option
              a(target="components/checkbox")
                | Checkbox